@model IEnumerable<MarketPricingSystem.ViewModel.product>
@{


    ViewBag.Title = "BestPrice";
}



<div style="height:100px"> <span></span></div>

<div class="English">

    <table id="products" class="table table-striped table-bordered" style="width:100% ;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Bar code</th>
                <th>Description</th>
                <th>Category</th>
                <th>Cheap price</th>
                <th>Expensive price</th>



            </tr>
        </thead>
        <tbody>
            @foreach (var market in Model)
            {

                <tr>

                    <td>@market.productname</td>
                    <td>@market.productBarcode</td>
                    <td>@market.productDescription</td>
                    <td>@market.productcategory</td>



                    <td>@Html.ActionLink("Cheapest price", "GetCheapestproduct", "Home", new { id = market.productid }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Expensive price", "GetExpensiveproduct", "Home", new { id = market.productid }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>



<div class="Arabic">

    <table id="productsa" class="table table-striped table-bordered" style="width:100% ;">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>الرمز</th>
                <th>الوصف</th>
                <th>الصنف</th>
                <th></th>
                <th></th>



            </tr>
        </thead>
        <tbody>
            @foreach (var market in Model)
            {

                <tr>

                    <td>@market.productname</td>
                    <td>@market.productBarcode</td>
                    <td>@market.productDescription</td>
                    <td>@market.productcategory</td>



                    <td>@Html.ActionLink("السعر الارخص", "GetCheapestproduct", "Home", new { id = market.productid }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("السعر الاغلى", "GetExpensiveproduct", "Home", new { id = market.productid }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>





<div style="margin-bottom:200px">
    <span></span>
</div>





@section Styles {

    <link href="~/Content/HomedataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/homedatatables.css" rel="stylesheet" type="text/css" />
}

@section scripts
{
    <script src="~/Scripts/Homejquery-3.5.1.js"></script>
    <script src="~/Scripts/Homejquery.dataTables.min.js"></script>
    <script src="~/Scripts/HomedataTables.bootstrap4.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#products').DataTable();
        });


        $(document).ready(function () {
            $('#productsa').DataTable();
        });

    </script>



}