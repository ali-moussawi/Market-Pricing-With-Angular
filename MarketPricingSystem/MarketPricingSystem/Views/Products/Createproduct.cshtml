@model  IEnumerable< MarketPricingSystem.Models.category>
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}
<main class="English">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Product</h3></div>
                    <div class="card-body">


                        <form method="post" action="/Products/Confirmcreate">
                            <h6 style="color:red;opacity:0.5">@TempData["Message1"]  </h6>  <h6 style="color:red;opacity:0.5;margin-left:53%">@TempData["Message2"]  </h6>
                            <div class="row mb-3">

                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="productname" type="text" name="productname" required />
                                        <label for="productname">Name </label>
                                    </div>
                                </div>

                                <div class="col-md-6">

                                    <div class="form-floating">
                                        <input class="form-control" id="Barcode" type="text" name="Barcode" required  pattern="[0-9]+"  oninvalid="this.setCustomValidity('Please enter just numbers')"oninput="this.setCustomValidity('')"  />
                                        <label for="Barcode">Barcode</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <input class="form-control" id="ProductDescription" type="text" name="ProductDescription" required />
                                <label for="ProductDescription">Description</label>
                            </div>


                            <h6 style="color:red;opacity:0.5;">@TempData["Message3"]  </h6>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="categories">Category</label>

                                        <select id="categories" class="form-control" name="Categoryid">

                                            <option selected disabled>--select--</option>

                                            @foreach (var category in Model)
                                            {
                                                <option value="@category.categoryId">@category.categoryName</option>
                                            }




                                        </select>

                                    </div>

                                </div>

                            </div>



                            <div class="mt-4 mb-0">
                                <div class="d-grid"> <button type="submit" class="btn btn-primary"> Add</button> </div>
                            </div>
                        </form>



                    </div>

                </div>
            </div>
        </div>
    </div>
</main>



