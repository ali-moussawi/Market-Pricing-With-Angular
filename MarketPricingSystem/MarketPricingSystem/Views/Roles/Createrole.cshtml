@model IEnumerable<MarketPricingSystem.Models.permission>


@{
    ViewBag.Title = "Createsupermarket";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}


<main class="English">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add new Role</h3></div>
                    <div class="card-body">

                        <h6 style="color:red;opacity:0.5;display:none" id="pleaseinsert">Please insert role name</h6>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" id="Rolename" onclick="hide()" type="text" name="Rolename" required />
                                    <label for="Rolename"> Role Name</label>
                                </div>
                            </div>

                        </div>





                        <div class="row mb-3">


                            @foreach (var permission in Model)
                            {

                                <div class="col-md-6">

                                    <input style=" cursor: pointer;" class="form-check-input checkk" type="checkbox" id="@permission.PermissionName" name="@permission.PermissionName" value="@permission.PermissionId">
                                    <label style=" cursor: pointer;" for="@permission.PermissionName"> @permission.PermissionName</label><br>

                                </div>


                            }







                        </div>

                        <div class="mt-4 mb-0">
                            <div class="d-grid"> <button type="submit" id="btne" class="btn btn-primary"> Add</button> </div>
                        </div>




                    </div>

                </div>
            </div>
        </div>
    </div>
</main>


